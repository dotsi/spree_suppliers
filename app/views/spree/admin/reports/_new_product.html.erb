<div id="add-line-item">
  <fieldset>
    <legend align="center"><%= t(:add_product) %></legend>

    <div data-hook="add_product_name" class="field eight columns alpha">
      <%= label_tag :add_product_name, t(:name_or_sku) %>
      <%= hidden_field_tag :add_variant_id, "", :class => "variant_autocomplete fullwidth" %>
    </div>
    
    <div data-hook="add_quantity" class="field two columns">
      <%= label_tag :add_quantity, t(:qty) %>
      <%= number_field_tag :add_quantity,  1, :min => 0 %>
    </div>
    
    <div data-hook="add_button" class="actions two columns omega">
      <%= link_to_with_icon 'icon-plus', t(:add), "#",
                  :class => 'button fullwidth add_line_item_to_order' %>
    </div>

    <div class="align-right" style="margin-top: 28px">
      <%= button_link_to "Pripravi email sporočilo", "return false", { icon: 'icon-email', "data-hook" => "send_product_supplier_email" } %>
    </div>

  </fieldset>
</div>